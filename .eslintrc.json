{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jquery": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"no-unused-expressions": [
			"error",
			{
				"allowTernary": true
			}
		],
		"react/prop-types": 0,
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "_"
			}
		],
		"no-console": 0,
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			2,
			"always"
		],
		"no-undef": 0,
		"react/no-unescaped-entities": [
			"error",
			{
				"forbid": [
					">",
					"}"
				]
			}
		]
	}
}